{
  "name": "ai-dpr-system",
  "version": "1.0.0",
  "description": "AI-powered Detailed Project Report system for risk analysis and project management",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "build": "echo 'Build completed successfully'",
    "build:frontend": "echo 'Frontend build skipped - using serverless functions'",
    "setup:public": "echo 'Public setup completed'",
    "copy:build": "cp -r react-frontend/dist/* public/ 2>/dev/null || cp -r react-frontend/build/* public/ 2>/dev/null || true",
    "install:all": "npm install && cd react-frontend && npm install 2>/dev/null || true",
    "setup": "npm run install:all && npm run build",
    "setup:db": "node scripts/setup-database.js",
    "setup:db:basic": "node scripts/setup-basic-db.js",
    "test": "echo 'No tests specified' && exit 0",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "deploy": "npm run setup && npm start",
    "deploy:local": "npm run setup && npm run setup:db:basic && npm start",
    "deploy:production": "npm run setup && NODE_ENV=production npm start",
    "vercel-build": "npm run build",
    "docker:build": "docker build -t ai-dpr-system .",
    "docker:run": "docker run -p 3000:3000 ai-dpr-system",
    "heroku-postbuild": "npm run build:frontend",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js"
  },
  "keywords": [
    "ai",
    "project-management",
    "risk-analysis",
    "reporting",
    "supabase",
    "nodejs",
    "react"
  ],
  "author": "AI DPR Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.58.0",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.50.0",
    "jest": "^29.7.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/ai-dpr-system.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/ai-dpr-system/issues"
  },
  "homepage": "https://github.com/your-username/ai-dpr-system#readme"
}
